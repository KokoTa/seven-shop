/* components/realm/realm.wxss */

.container {
  box-sizing: border-box;
  padding: 30rpx;
  background: #fff;
  position: relative;
}

.sku-preview {
  display: flex;
  flex-direction: row;
}

.sku-img {
  width: 160rpx;
  height: 160rpx;
}

.sku-desc {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 40rpx;
}

.price-row {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.discount-price {
  margin-left: 20rpx;
}

.sku-pending {
  font-size: 20rpx;
  margin-top: 5rpx;
}

.hr {
  margin-top: 30rpx;
  width: 690rpx;
  height: 2rpx;
  background: #e9e9e9;
}

.stock {
  margin-left: 30rpx;
  font-size: 20rpx;
  color: #999;
}

.stock-pinch {
  margin-left: 30rpx;
  font-size: 20rpx;
  color: #d20109;
}

.sku-pending-text {
  color: #999;
}

.counter {
  margin-top: 34rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 200rpx;
}
.counter text {
  font-size: 24rpx;
}

.bottom-btn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #333;
  position: absolute;
  bottom: 0;
  left: 0;
}

.bottom-btn text {
  color: #fff;
}

.out-stock {
  background-color: #dcebe6;
}
