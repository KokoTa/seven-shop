/* components/spu-description/index.wxss */

.container {
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding: 24rpx 30rpx 26rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.title {
  font-weight: 400;
}

.tags {
  display: flex;
  flex-direction: row;
}

.l-tag {
  margin-right: 6rpx !important;
}

.left {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.subtitle {
  color: #999;
  font-size: 28rpx;
  font-weight: 400;
  margin: 40rpx 0 16rpx 0;
}

.price-row {
  display: flex;
  align-items: baseline;
}

.discount-price {
  margin-left: 20rpx;
  margin-right: 80rpx;
}

.discount-tag {
  position: relative !important;
  bottom: 4rpx;
  width: 60rpx;
  border-radius: 20rpx !important;
}

.right {
  margin-left: 20rpx;
  width: 78rpx;
  height: 120rpx;
  border-left: 2rpx dashed #f5f5f5;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #deebe6 !important;
  width: 50rpx;
  height: 120rpx;
}

.inner text {
  font-size: 20rpx;
  color: #157658;
}
