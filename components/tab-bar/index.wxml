<view class="container">
  <view class="icons">
    <view bind:tap="goToHome">
      <l-icon l-class="icon-font" name="home" size="46"></l-icon>
      <text>首页</text>
    </view>
    <view bind:tap="goToCart">
      <l-badge show="{{cartItemCount !== 0}}" value="{{cartItemCount}}">
        <l-icon l-class="icon-font" name="cart" size="46"></l-icon>
      </l-badge>
      <text>购物车</text>
    </view>
  </view>
  <view class="cart btn-font" bind:tap="onAddToCart">
    <text>加入购物车</text>
  </view>
  <view class="buy btn-font" bind:tap="onBuy">
    <text>立即购买</text>
  </view>
</view>
