/* components/tab-bar/index.wxss */

.icon-font {
  font-family: 'iconfont' !important;
  color: #157658 !important;
}

.container {
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
}

.icons {
  box-sizing: border-box;
  padding-left: 16rpx;
  padding-right: 22rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  width: 230rpx;
  height: 100%;
  color: #999;
}

.icons > view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icons text {
  font-size: 20rpx;
}

.btn-font {
  color: #fff;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.buy {
  background: #157658;
  width: 260rpx;
  height: 100%;
}

.cart {
  background: #333;
  width: 260rpx;
  height: 100%;
}
