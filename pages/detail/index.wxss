/* pages/detail.wxss */

.container {
  padding-bottom: 100rpx;
}

.top {
  width: 100%;
  height: 680rpx;
}
.top-img {
  width: 100%;
  height: 100%;
}

.tabbar {
  position: fixed;
  bottom: 0;
}

.sku-pending {
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  background: #fff;
  margin: 10rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  padding: 0 30rpx;
}

.sku-pending-text {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sku-pending-text-title {
  color: #999;
  font-size: 24rpx;
}

.sku-pending-text-content {
  color: #157659;
  font-size: 24rpx;
}

.detail-img {
  display: flex;
  width: 100%;
}


.coupon-container{
  background-color: #ffffff;
  display:flex;
  flex-direction:row;
  width: 100%;
  height: 88rpx;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.coupon-left {
  display: flex;
  flex-direction: row;
}

.coupon-left > s-coupon-mini:first-child{
  margin-right: 20rpx;
}

.coupon-right{
  display:flex;
  flex-direction:row;
  align-items: center;
}

.coupon-right > text{
  font-size:24rpx;
  color: #333333;
  margin-right:20rpx ;
  margin-top:-4rpx;
}